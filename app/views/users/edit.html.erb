<div class="span5 offset3">
	<div class="well well-large">
		<%- model_class = User -%>
		<div class="page-header">
		  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
		</div>
		<%= simple_form_for @user, :html => { :multipart => true } do |f| %>
		  <% if @user.errors.any? %>
		    <div id="error_explanation">
		    <%if @user.errors.count<=1%>
        		<h2><%= pluralize(@user.errors.count, "error") %> impidi√≥ guardar los cambios</h2>
      		<%else%>
        		<h2><%= pluralize(@user.errors.count, "errores") %> impidieron guardar los cambios</h2>
      		<%end%>
		      <ul>
		      <% @user.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
		  <div><%= f.label :name %>
		  <%= f.text_field :name %></div>
		  <div><%= f.label :email %>
		  <%= f.email_field :email %></div>
		  <%= f.button :submit, :class => 'btn btn-medium btn-primary btn' %>
		<% end %>
	</div>
</div>