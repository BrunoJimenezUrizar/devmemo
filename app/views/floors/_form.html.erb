<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel"><%= @modal_title %></h3>
</div>
<div class="modal-body">
<%= form_for [@floor.building.campus.university, @floor.building.campus, @floor.building, @floor], :html => { :multipart => true }, :validate => true, :remote => true do |f| %>
  <% if @floor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@floor.errors.count, "error") %> prohibited this floor from being saved:</h2>

      <ul>
      <% @floor.errors.full_messages.each do |msg| %>
