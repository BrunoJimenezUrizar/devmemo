<div class="span3 offset9">
	<div class="well well-large">
		<h2><%=t("titles.sessions.new")%></h2>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
		  <%= f.input :email, :autofocus => true %>
		  <%= f.input :password %>
		  <%= f.input :remember_me, :as => :boolean, :label =>t("messages.user_login.remember_me") if devise_mapping.rememberable? %>
		  <%= f.button :submit,t("devise.sessions.new.sign_in"), :class => 'btn-primary' %>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>
