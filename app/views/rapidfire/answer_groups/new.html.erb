<div class="well span5 offset3">
<h2><%= @question_group.name %></h2>
<hr/>

<%= form_for([rapidfire, @question_group, @answer_group_builder]) do |f| %>
  <%- @answer_group_builder.answers.each do |answer| %>
    <%= f.fields_for("#{answer.question.id}", answer) do |answer_form| %>
      <%= render_answer_form_helper(answer, answer_form) %>
    <% end %>
  <% end %>
  <%= f.submit "Guardar" %>
<% end %>
</div>
