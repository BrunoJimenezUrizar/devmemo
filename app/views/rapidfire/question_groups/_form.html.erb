<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"><%= @question_group.new_record? ? "Nueva Encuesta" : "Editar Encuesta" %></h3>
  </div>
  <div class="modal-body">

<%= form_for @question_group, :validate => true, :html => { :class =>
'form-horizontal',:class => 'edit_question_group', :multipart => true } do |f| %>

  <div class="control-group">
    <div class="control-label"><%= f.label :name, "Nombre" %></div>
    <div class="controls"><%= f.text_field :name, :placeholder => "Nombre Encuesta" %></div>
  </div>

  <div class="control-group">
    <div class="control-label"><%= f.label :campus_ids, "Campuses" %></div>
    <div class="controls"><%= f.collection_select :campus_ids, @university.campuses.order(:name), :id, :name, {:selected => @question_group.campus_ids, :include_blank => true}, {multiple: true} %></div>
  </div>

  <div class="control-group">
    <div class="control-label"><%= f.label :photo, "Imagen" %></div>
    <div class="controls"><%= f.file_field :photo %></div>
  </div>
  <%= f.hidden_field :university_id, :value => @university.id %>

<% end %>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cerrar</button>
    <button class="btn btn-primary" id="survey-save">Guardar</button>
</div>
