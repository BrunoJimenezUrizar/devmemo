<div id="edit_question_<%= question.id %>">
  <%= question.question_text %>
      <%= link_to '<i class="icon-pencil"></i>'.html_safe, [:edit, question.question_group, question], :data => {:toggle=>"modal", :target => '#modal-question'}, remote: true %>
      <%= link_to '<i class="icon-remove"></i>'.html_safe, [question.question_group, question], method: :delete %>
</div>