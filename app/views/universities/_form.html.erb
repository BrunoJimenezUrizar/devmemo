<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
	<h3 id="myModalLabel"><%= @modal_title %></h3>
</div>
<div class="modal-body">

<%= form_for @university, :html => { :class =>
'form-centered edit_university' }, :validate => true, remote: true do |f| %>
    <div class="control-group">
    	<div class="control-label"><%= f.label :name, "Nombre" %></div>
        <div class="controls"><%= f.text_field :name, :placeholder => 'Nombre'%></div>
    </div>
    <div class="control-group">
        <div class="control-label"><%= f.label :acronym, "Sigla" %></div>
        <div class="controls"><%= f.text_field :acronym, :placeholder => 'Sigla' %></div>
    </div>
    <div class="control-group">
    	<div class="control-label"><%= f.label :logo, "Logo" %></div>
        <div class="controls"><%= f.file_field :logo, :placeholder => 'Logo' %></div>
        <% if @action == "edit"%>
    		<%= image_tag @university.logo , id:"edit_logo"%>
    	<%end%>
    </div>
<% end %>
</div>	
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cerrar</button>
    <button class="btn btn-primary" id="university-save">Guardar</button>
</div>
